* {
	font-size: 16px;
	font-family: MonofurNerdFont;
}

window#waybar {
	background: #0F2B48;
	color: #fdf6e3;
}

#custom-right-arrow-dark,
#custom-left-arrow-dark {
	color: #0F1F33;
}
#custom-right-arrow-light,
#custom-left-arrow-light {
	color: #0F2B48;
	background: #0F1F33;
}

#workspaces,
#clock.1,
#clock.2,
#clock.3,
#custom-weather,
#pulseaudio,
#memory,
#cpu,
#disk,
#tray {
	background: #0F1F33;
}

#workspaces button {
	padding: 0 2px;
	color: #fdf6e3;
}
#workspaces button.focused {
	color: #268bd2;
}
#workspaces button:hover {
	box-shadow: inherit;
	text-shadow: inherit;
}
#workspaces button:hover {
	background: #0F1F33;
	border: #0F1F33;
	padding: 0 3px;
}

#clock.1 {
	color: #18c309;
}

#clock.2 {
	color: #18c309;
}

#clock.3 {
	color: #18c309;
}

#custom-weather {
	color: #268bd2;
}

#pulseaudio {
	color: #bbbb21;
}
#memory {
	color: #2aa198;
}
#cpu {
	color: #6c71c4;
}
#battery {
	color: #859900;
}
#disk {
	color: #b58900;
}

#clock,
#pulseaudio,
#memory,
#cpu,
#battery,
#disk {
	padding: 0 10px;
}
